<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="169dp"
        android:id="@+id/archiveTitleText"
        android:onClick="textonClick"
        android:maxLines="1"
        android:maxLength="30"
        android:lines="1"
        android:layout_height="80dp"
        tools:ignore="MissingConstraints"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/level1"
        android:id="@+id/archiveImage"
        tools:ignore="MissingConstraints"
        android:contentDescription="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/archiveListView"
        android:layout_width="379dp"
        android:layout_height="427dp"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/archiveImage"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="169dp"
        android:layout_height="112dp"
        android:id="@+id/archiveInfoText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/archiveTitleText"
        app:layout_constraintLeft_toLeftOf="@+id/archiveTitleText" />

</android.support.constraint.ConstraintLayout>