<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/layoutDialog"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:background="@drawable/yuza_congratulation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_height="60dp"
        android:id="@+id/cameraDialogBtn"
        android:background="@drawable/camerabtn"
        android:layout_width="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintLeft_toLeftOf="@+id/textView7" />

    <Button
        android:layout_height="60dp"
        android:id="@+id/faceBookDialogBtn"
        android:background="@drawable/facebookbtn1"
        android:layout_width="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/cancelDialogBtn"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_height="60dp"
        android:id="@+id/cancelDialogBtn"
        android:background="@drawable/canclebtn"
        android:layout_width="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</android.support.constraint.ConstraintLayout>
